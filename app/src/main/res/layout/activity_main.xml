<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA6B5">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="LGBTQ+ Healthcare"
        android:textSize="35sp"
        android:textColor="#FF3399"
        android:textStyle="bold"
        android:fontFamily="cursive" />

    <!-- Text Box -->
    <TextView
        android:id="@+id/authorsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Rico Embrado, Jasmine Tompkins, and Jonathan Rodriguez"
        android:textSize="16sp"
        android:textColor="#000000" />

    <!-- Summary Text -->
    <TextView
        android:id="@+id/summaryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/authorsTextView"
        android:layout_marginTop="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Addressing the discrimination of LGBTQ+ individuals in healthcare and providing solutions to ensure inclusivity and equitable access to quality healthcare."
        android:textSize="18sp"
        android:textColor="#000000"
        android:lineSpacingMultiplier="1.2" />

    <!-- Buttons -->
    <Button
        android:id="@+id/informationButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summaryTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="#FF3399"
        android:text="Information Page"
        android:textSize="16sp"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/solutionButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/informationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Solution Page"
        android:textSize="16sp"
        android:background="#3366CC" />
</RelativeLayout>
